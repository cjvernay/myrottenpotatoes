-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => @th_class["title"]}= link_to 'Movie Title', {:sort => "title"}
      %th{:class => @th_class["rating"]}= link_to 'Rating', {:sort => "rating"}, {:class => "hilite"}
      %th Release Date
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
